{
    "add-field-type": [{
            "name": "listField",
            "class": "solr.TextField",
            "analyzer": {
                "tokenizer": {
                    "class": "solr.ClassicTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.StopFilterFactory", "words": "stop.txt", "ignoreCase": "true" },
                    { "class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true },
                    { "class": "solr.LowerCaseFilterFactory" },
                    { "class": "solr.EnglishMinimalStemFilterFactory" }
                ]
            }
        },
        {
            "name": "ingredientsField",
            "class": "solr.TextField",
            "analyzer": {
                "tokenizer": {
                    "class": "solr.ClassicTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.StopFilterFactory", "words": "stop.txt", "ignoreCase": "true" },
                    { "class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true },
                    { "class": "solr.PatternReplaceFilterFactory", "pattern": "[0-9]+", "replacement": "" },
                    { "class": "solr.LowerCaseFilterFactory" },
                    { "class": "solr.EnglishMinimalStemFilterFactory" }
                ]
            }
        },
        {
            "name": "bodyField",
            "class": "solr.TextField",
            "analyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.StopFilterFactory", "words": "stopwords.txt", "ignoreCase": "true" },
                    { "class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true },
                    { "class": "solr.LowerCaseFilterFactory" },
                    { "class": "solr.EnglishMinimalStemFilterFactory" }
                ]
            }
        },
        {
            "name": "titleField",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true },
                    { "class": "solr.LowerCaseFilterFactory" },
                    { "class": "solr.EnglishMinimalStemFilterFactory" }
                ]
            },
            "queryAnalyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true },
                    { "class": "solr.LowerCaseFilterFactory" },
                    { "class": "solr.EnglishMinimalStemFilterFactory" }
                ]
            }
        }
    ],

    "add-field": [{
            "name": "identifier",
            "type": "pint",
            "indexed": "false",
            "stored": "false",
            "required": "true"
        },
        {
            "name": "name",
            "type": "titleField",
            "indexed": "true",
            "stored": "true",
            "required": "true"
        },
        {
            "name": "description",
            "type": "bodyField",
            "indexed": "true",
            "stored": "true",
            "required": "true"
        },
        {
            "name": "ingredients",
            "type": "ingredientsField",
            "indexed": "true",
            "stored": "true",
            "required": "true",
            "multiValued": "true"
        },
        {
            "name": "serving_size",
            "type": "pint",
            "indexed": "false",
            "stored": "true",
            "required": "true"
        },
        {
            "name": "servings",
            "type": "pint",
            "indexed": "true",
            "stored": "true",
            "required": "true"
        },
        {
            "name": "steps",
            "type": "bodyField",
            "indexed": "true",
            "stored": "true",
            "required": "true",
            "multiValued": "true"
        },
        {
            "name": "tags",
            "type": "listField",
            "indexed": "true",
            "stored": "true",
            "required": "true",
            "multiValued": "true"
        },
        {
            "name": "search_terms",
            "type": "listField",
            "indexed": "true",
            "stored": "true",
            "required": "true",
            "multiValued": "true"
        }
    ]
}